extends layouts/app

include components/forms
block content
    .login-box
        .login-logo
            b FA18-BSE-059
            br
            | Terminal Exam
        .card
            .card-body.login-card-body
                p.login-box-msg Get Registered to get access of maximum Features
                p.text-danger #{MongoError}
                form(action="/signup", method="post")
                    .input-group.mb-1
                        .input-group-append
                            .input-group-text.h-100
                                .fa.fa-user.my-auto
                        +input-simple("text","name","Name","name")
                    span.text-danger.mb-2 #{nameError}
                    .input-group.mb-1
                        .input-group-append
                            .input-group-text.h-100
                                .fa.fa-envelope.my-auto
                        +input-simple("email","email","Email","email")
                    span.text-danger.mb-2 #{emailError}
                    .input-group.mb-1.d-flex.justify-content-between
                        p Gender:
                        +radio-inline("Male", "gender", "male")
                        +radio-inline("Female", "gender", "female")
                        +radio-inline("Others", "gender", "other")
                    span.text-danger.mb-1 #{genderError}
                    .input-group.mb-1
                        .input-group-append
                            .input-group-text.h-100
                                .fa.fa-lock.my-auto
                        +input-simple("password","password","Password","password")
                    span.text-danger.mb-2 #{passwordError}
                    .row
                        .col-12
                            button(type="submit", class=["btn", "btn-primary", "btn-block"]) Sign Up

